package components

templ RegisterForm() {
    <form action="/register" method="post" class="space-y-4 mt-3">
        <div>
            <label for="username" class="block text-sm font-medium text-white">Username</label>
            <input type="text" id="username" name="username" class="mt-1 p-2 w-full border rounded-md text-white bg-black" />
        </div>

        <div>
            <label for="email" class="block text-sm font-medium text-white">Email</label>
            <input type="email" id="email" name="email" class="mt-1 p-2 w-full border rounded-md text-white bg-black" />
        </div>

        <div>
            <label for="password" class="block text-sm font-medium text-white">Password</label>
            <input type="password" id="password" name="password" class="mt-1 p-2 w-full border rounded-md text-white bg-black" />
        </div>

        <button type="submit" class="bg-gray-800 text-white p-2 rounded cursor-pointer hover:focus:outline-none focus:ring focus:border-green-300">
            Register
        </button>
    </form>
}